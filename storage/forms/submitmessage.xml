<?xml version="1.0"?><h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:kobo="http://kobotoolbox.org/xforms"><h:head><h:title>Submit Message</h:title><model odk:xforms-version="1.0.0"><instance><data kobo:submitMessage="/data/submitMessage" id="submitmessage" version="1"><name/><isParent/><numChildren/><submitMessage/><showMessage/><meta><instanceID/></meta></data></instance><instance id="yes_no"><root><item><name>0</name><label>no</label></item><item><name>1</name><label>yes</label></item></root></instance><bind nodeset="/data/name" type="string"/><bind nodeset="/data/isParent" type="string"/><bind nodeset="/data/numChildren" type="int" relevant=" /data/isParent =1"/><bind nodeset="/data/submitMessage" type="string" calculate="if(boolean( /data/isParent =1 and  /data/numChildren &gt;1),'You are eligible', 'You are not eligible. Click [here](http://kobotoolbox.org) for more information')"/><bind nodeset="/data/showMessage" type="string" calculate=" /data/submitMessage " readonly="true()"/><bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/></model></h:head><h:body><input ref="/data/name"><label>What is your name?</label></input><select1 ref="/data/isParent"><label>Do you have any children?</label><itemset nodeset="instance('yes_no')/root/item"><value ref="name"/><label ref="label"/></itemset></select1><input ref="/data/numChildren"><label>How many?</label></input><input appearance="multiline" ref="/data/showMessage"><label>This will be the post-submit message</label></input></h:body></h:html>